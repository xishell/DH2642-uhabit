{
	"name": "dh2642-uhabit",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:cf": "node scripts/dev-cf.js",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"lint:eslint": "bunx eslint src --ext .ts,.svelte",
		"lint:complexity:eslint": "bunx eslint src --ext .ts,.svelte --max-warnings=0",
		"lint:complexity": "node scripts/complexity-check.js",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "bun run scripts/migrate.ts",
		"db:migrate:staging": "bun run scripts/migrate.ts --remote --env=preview",
		"db:migrate:production": "bun run scripts/migrate.ts --remote --env=production",
		"db:status": "wrangler d1 execute DB --local --command 'SELECT * FROM __drizzle_migrations ORDER BY applied_at'",
		"db:status:staging": "wrangler d1 execute DB --remote --env=preview --command 'SELECT * FROM __drizzle_migrations ORDER BY applied_at'",
		"db:status:production": "wrangler d1 execute DB --remote --env=production --command 'SELECT * FROM __drizzle_migrations ORDER BY applied_at'",
		"db:execute:local": "wrangler d1 execute DB --local",
		"db:shell:local": "wrangler d1 execute DB --local --command",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251126.0",
		"@libsql/client": "^0.15.15",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/bcryptjs": "^3.0.0",
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^22",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"drizzle-kit": "^0.31.7",
		"drizzle-orm": "^0.45.0",
		"eslint": "^9.39.2",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-svelte": "^3.13.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.10"
	},
	"dependencies": {
		"@lucide/svelte": "^0.562.0",
		"@skeletonlabs/skeleton": "^4.7.3",
		"@skeletonlabs/skeleton-svelte": "^4.7.3",
		"autoprefixer": "^10.4.22",
		"bcryptjs": "^3.0.3",
		"better-auth": "^1.4.3",
		"js-cookie": "^3.0.5",
		"lucide-svelte": "^0.556.0",
		"postcss": "^8.5.6",
		"zod": "^4.1.13"
	}
}
